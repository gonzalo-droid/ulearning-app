<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dimen8"
    android:paddingBottom="@dimen/dimen3"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/dimen67"
        android:layout_height="@dimen/dimen40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo"
        tools:ignore="ContentDescription" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/notificationBtn"
        style="?attr/materialCardViewElevatedStyle"
        android:layout_width="@dimen/dimen40"
        android:layout_height="@dimen/dimen40"
        android:layout_marginVertical="@dimen/dimen3"
        android:layout_marginEnd="@dimen/dimen4"
        android:elevation="@dimen/dimen1"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2">

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="@dimen/dimen24"
            android:layout_height="@dimen/dimen26"
            android:layout_gravity="center"
            android:src="@drawable/ic_setting"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="ContentDescription" />
    </com.google.android.material.card.MaterialCardView>



</androidx.constraintlayout.widget.ConstraintLayout>