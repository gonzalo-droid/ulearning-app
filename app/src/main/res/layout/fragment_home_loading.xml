<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.features.home.view.HomeFragment"
    android:id="@+id/loadingLayout"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline27123"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline28123"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.94" />

    <View
        android:id="@+id/topbar123"
        layout="@layout/home_top_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen40"
        android:background="@color/viewLoading"
        app:layout_constraintEnd_toStartOf="@+id/guideline28123"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline27123"
        app:layout_constraintTop_toTopOf="parent" />



    <View
        android:id="@+id/textView83123"
        android:layout_width="@dimen/dimen60"
        android:layout_height="@dimen/dimen30"
        android:layout_marginTop="@dimen/dimen20"
        android:background="@color/viewLoading"
        app:layout_constraintStart_toStartOf="@+id/guideline27123"
        app:layout_constraintTop_toBottomOf="@+id/topbar123"/>



    <View
        android:id="@+id/tvUserName123"
        android:layout_width="@dimen/dimen200"
        android:layout_height="@dimen/dimen30"
        android:layout_marginTop="@dimen/dimen5"
        android:background="@color/viewLoading"
        app:layout_constraintStart_toStartOf="@+id/guideline27123"
        app:layout_constraintTop_toBottomOf="@+id/textView83123"/>


    <View
        android:id="@+id/continueLearningText123"
        android:layout_width="@dimen/dimen120"
        android:layout_height="@dimen/dimen20"
        android:layout_marginTop="20dp"
        android:background="@color/viewLoading"
        app:layout_constraintStart_toStartOf="@+id/guideline27123"
        app:layout_constraintTop_toBottomOf="@+id/tvUserName123" />


    <LinearLayout
        android:id="@+id/courseRecentlyRecycler123"
        android:layout_marginTop="@dimen/dimen8"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen150"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/guideline28123"
        app:layout_constraintStart_toStartOf="@+id/guideline27123"
        app:layout_constraintTop_toBottomOf="@+id/continueLearningText123">

        <include
            layout="@layout/list_courses_recently_item_loading"
            />

        <include
            layout="@layout/list_courses_recently_item_loading"
            />

    </LinearLayout>




    <View
        android:id="@+id/myCourseText123213"
        android:layout_width="@dimen/dimen120"
        android:layout_height="@dimen/dimen20"
        android:layout_marginTop="20dp"
        android:background="@color/viewLoading"
        app:layout_constraintStart_toStartOf="@+id/guideline27123"
        app:layout_constraintTop_toBottomOf="@+id/courseRecentlyRecycler123" />


    <LinearLayout
        android:id="@+id/courseRecycler123"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen8"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/guideline28123"
        app:layout_constraintStart_toStartOf="@+id/guideline27123"
        app:layout_constraintTop_toBottomOf="@+id/myCourseText123213">

        <include
            layout="@layout/item_courses_loading"
            />

        <include
            layout="@layout/item_courses_loading"
            />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>