<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.features.courses.DetailCourseActivity">

    <data>

        <variable
            name="detailCourseViewModel"
            type="com.ulearning.ulearning_app.presentation.features.courses.DetailCourseViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbarLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:collapsedTitleGravity="top|center"
                app:collapsedTitleTextAppearance="@style/CollapsedAppBar"
                app:contentScrim="@color/green"
                app:expandedTitleGravity="bottom|center"
                app:expandedTitleMarginStart="50dp"
                app:expandedTitleTextAppearance="@style/ExpandedAppBar"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:maxLines="2"
                app:toolbarId="@id/toolbar">

                <ImageView
                    android:id="@+id/imageCourseIv"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/course_test"
                    app:layout_collapseMode="parallax" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:gravity="top"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:titleMarginTop="18dp" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>


        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/dimen40"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constrainedHeight="true">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp">


                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/rightGuideLine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.94" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/leftGuideLine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.06" />


                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen15"
                    android:text="Curso de computaciÃ³n"
                    android:textAppearance="@style/readex_20_regular"
                    app:layout_constraintEnd_toEndOf="@+id/rightGuideLine"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/leftGuideLine"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/descriptionText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/dimen10"
                    android:gravity="left"
                    android:text="aaaaa aaaaa aaaaa aaaaa aaaaa"
                    android:textAppearance="@style/readex_12_light"
                    app:layout_constraintEnd_toEndOf="@+id/rightGuideLine"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/leftGuideLine"
                    app:layout_constraintTop_toBottomOf="@+id/titleText" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/sectionTimeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen16"
                    app:layout_constraintEnd_toStartOf="@+id/sectionModalityLayout"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/leftGuideLine"
                    app:layout_constraintTop_toBottomOf="@+id/descriptionText">

                    <TextView
                        android:id="@+id/timeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_time"
                        android:drawablePadding="@dimen/dimen5"
                        android:gravity="center"
                        android:textAppearance="@style/readex_16_medium"
                        android:textColor="@color/blue"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="24hr" />

                    <TextView
                        android:id="@+id/descriptionTimeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@string/hour_learn_title"
                        android:textAppearance="@style/readex_12_light"
                        android:textColor="@color/blue"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/timeText" />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/sectionModalityLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/sectionTimeLayout"
                    app:layout_constraintEnd_toEndOf="@+id/rightGuideLine"
                    app:layout_constraintStart_toStartOf="@+id/leftGuideLine"
                    app:layout_constraintTop_toTopOf="@+id/sectionTimeLayout"
                    app:layout_constraintVertical_bias="0.0">


                    <TextView
                        android:id="@+id/modalityText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_modality"
                        android:drawablePadding="@dimen/dimen5"
                        android:gravity="center"
                        android:textAppearance="@style/readex_16_medium"
                        android:textColor="@color/blue"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Virtual" />

                    <TextView
                        android:id="@+id/descriptionModalityText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Modalidad"
                        android:textAppearance="@style/readex_12_light"
                        android:textColor="@color/blue"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/modalityText" />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/sectionTopicLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/sectionTimeLayout"
                    app:layout_constraintEnd_toEndOf="@+id/rightGuideLine"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/sectionModalityLayout"
                    app:layout_constraintTop_toTopOf="@+id/sectionTimeLayout"
                    app:layout_constraintVertical_bias="0.0">

                    <TextView
                        android:id="@+id/topicText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_topic"
                        android:drawablePadding="@dimen/dimen5"
                        android:gravity="center"
                        android:textAppearance="@style/readex_16_medium"
                        android:textColor="@color/blue"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="4" />

                    <TextView
                        android:id="@+id/descriptionTopicText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="Total de sesiones"
                        android:textAppearance="@style/readex_12_light"
                        android:textColor="@color/blue"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/topicText" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/messageBtn"
                    style="?attr/materialCardViewElevatedStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen16"
                    android:elevation="@dimen/dimen1"
                    android:onClick="@{()->detailCourseViewModel.setEvent(detailCourseViewModel.Events.goToConversation)}"
                    app:layout_constraintEnd_toEndOf="@+id/rightGuideLine"
                    app:layout_constraintStart_toStartOf="@+id/leftGuideLine"
                    app:layout_constraintTop_toBottomOf="@+id/sectionTimeLayout">


                    <TextView
                        android:id="@+id/messageText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/dimen14"
                        android:drawableTint="@color/blue"
                        android:padding="@dimen/dimen10"
                        android:text="@string/message_title"
                        android:textAppearance="@style/readex_16_regular"
                        android:textColor="@color/blue"
                        app:drawableEndCompat="@drawable/ic_arrow_forward"
                        app:drawableStartCompat="@drawable/ic_message"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </com.google.android.material.card.MaterialCardView>


                <TextView
                    android:id="@+id/teacherTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen15"
                    android:text="Nuestros docentes"
                    android:textAppearance="@style/readex_14_regular"
                    app:layout_constraintEnd_toEndOf="@+id/rightGuideLine"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/leftGuideLine"
                    app:layout_constraintTop_toBottomOf="@+id/messageBtn" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen8"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="@+id/rightGuideLine"
                    app:layout_constraintStart_toStartOf="@+id/leftGuideLine"
                    app:layout_constraintTop_toBottomOf="@+id/teacherTitle"
                    tools:listitem="@layout/item_teacher" />


                <TextView
                    android:id="@+id/topicTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen15"
                    android:text="Temario"
                    android:textAppearance="@style/readex_14_regular"
                    app:layout_constraintEnd_toEndOf="@+id/rightGuideLine"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/leftGuideLine"
                    app:layout_constraintTop_toBottomOf="@+id/recycler" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/downloadCertBtn"
                    style="?attr/materialCardViewElevatedStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen8"
                    android:elevation="@dimen/dimen1"
                    android:onClick="@{()->detailCourseViewModel.setEvent(detailCourseViewModel.Events.goToCertificate)}"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@+id/rightGuideLine"
                    app:layout_constraintStart_toStartOf="@+id/leftGuideLine"
                    app:layout_constraintTop_toBottomOf="@+id/topicTitle"
                    tools:visibility="visible">


                    <TextView
                        android:id="@+id/downloadCertText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/dimen14"
                        android:drawableTint="@color/blue"
                        android:padding="@dimen/dimen10"
                        android:text="@string/download_cert"
                        android:textAppearance="@style/readex_16_regular"
                        android:textColor="@color/blue"
                        app:drawableEndCompat="@drawable/ic_arrow_forward"
                        app:drawableStartCompat="@drawable/ic_baseline_cloud_download"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/downloadRecordBtn"
                    style="?attr/materialCardViewElevatedStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen8"
                    android:elevation="@dimen/dimen1"
                    android:onClick="@{()->detailCourseViewModel.setEvent(detailCourseViewModel.Events.goToRecord)}"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@+id/rightGuideLine"
                    app:layout_constraintStart_toStartOf="@+id/leftGuideLine"
                    app:layout_constraintTop_toBottomOf="@+id/downloadCertBtn"
                    tools:visibility="visible">


                    <TextView
                        android:id="@+id/downloadRecordText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/dimen14"
                        android:drawableTint="@color/blue"
                        android:padding="@dimen/dimen10"
                        android:text="@string/download_record"
                        android:textAppearance="@style/readex_16_regular"
                        android:textColor="@color/blue"
                        app:drawableEndCompat="@drawable/ic_arrow_forward"
                        app:drawableStartCompat="@drawable/ic_baseline_cloud_download"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/topicBtn"
                    style="?attr/materialCardViewElevatedStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen16"
                    android:elevation="@dimen/dimen1"
                    app:layout_constraintEnd_toEndOf="@+id/rightGuideLine"
                    app:layout_constraintStart_toStartOf="@+id/leftGuideLine"
                    app:layout_constraintTop_toBottomOf="@+id/downloadRecordBtn">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/minimumBalanceBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen5">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/topicRecycler"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen8"
                            android:nestedScrollingEnabled="false"
                            android:orientation="vertical"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:listitem="@layout/item_topic" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>