<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen10"
    tools:ignore="RtlSymmetry">

    <ImageView
        android:id="@+id/topicImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTint="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.20"
        app:srcCompat="@drawable/ic_topic" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen10"
        android:textAppearance="@style/readex_14_regular"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="@+id/topicImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/topicImage"
        app:layout_constraintTop_toTopOf="@+id/topicImage"
        tools:text="Curso del temario 3/5" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/dividerTopic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen10"
        app:dividerColor="@color/divider_color_soft"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />



</androidx.constraintlayout.widget.ConstraintLayout>