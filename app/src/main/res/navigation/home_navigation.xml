<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_navigation"
    app:startDestination="@id/navigation_home">


    <fragment
        android:id="@+id/navigation_home"
        android:name="com.ulearning.ulearning_app.presentation.features.home.view.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_detailCourseFragment"
            app:destination="@id/detailCourseFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.ulearning.ulearning_app.presentation.features.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/detailCourseFragment"
        android:name="com.ulearning.ulearning_app.presentation.features.courses.DetailCourseFragment"
        android:label="fragment_detail_course"
        tools:layout="@layout/fragment_detail_course" >
        <action
            android:id="@+id/action_detailCourseFragment_to_topicFragment"
            app:destination="@id/topicFragment" />
    </fragment>
    <fragment
        android:id="@+id/topicFragment"
        android:name="com.ulearning.ulearning_app.presentation.features.topic.TopicFragment"
        android:label="fragment_topic"
        tools:layout="@layout/fragment_topic" />

</navigation>